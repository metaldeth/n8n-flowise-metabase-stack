# -----------------
# Общие параметры
# -----------------
DOMAIN=example.com

# -----------------
# Postgres
# -----------------
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme
POSTGRES_DB=appdb

# -----------------
# pgAdmin
# -----------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# -----------------
# n8n
# -----------------
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Подключение n8n к Postgres (используем ваш контейнер postgres)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=appdb
DB_POSTGRESDB_USER=admin
DB_POSTGRESDB_PASSWORD=changeme

# Публичный URL (важно, чтобы n8n формировал корректные webhook URL)
N8N_HOST=n8n.asnefedov.ru
N8N_PROTOCOL=https
N8N_PORT=443
WEBHOOK_URL=https://n8n.asnefedov.ru

# Логирование для дебага (опционально на время отладки)
N8N_LOG_LEVEL=debug

# -----------------
# Flowise
# -----------------
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=changeme

# -----------------
# Metabase
# -----------------
MB_DB_TYPE=postgres
MB_DB_DBNAME=appdb
MB_DB_USER=admin
MB_DB_PASS=changeme
MB_DB_HOST=postgres
MB_DB_PORT=5432